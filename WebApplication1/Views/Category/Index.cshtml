@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<h2>@TempData["success"]</h2>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>

<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.Id" asp-controller="Category" class="btn btn-primary">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@obj.Id" asp-controller="Category" class="btn btn-danger">
                        Delete
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>